{
  "mount": {
    "build": "/",
    "src/scripts": "/_dist_"
  },
  "plugins": [
    "@snowpack/plugin-postcss",
    [
      "@snowpack/plugin-run-script", {
        "cmd": "eleventy", "watch": "$1 --watch --quiet"
      }
    ],
    [
      "@snowpack/plugin-optimize", {
        "preloadModules": true,
        "target": "es2020"
      }
    ]
  ],
  "installOptions": {
    "NODE_ENV": true
  },
  "buildOptions": {
    "clean": true,
    "out": "dist"
  },
  "devOptions": {
    "hmrDelay": 1000,
    "open": "none"
  }
}
